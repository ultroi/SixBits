{
  "name": "zariya",
  "version": "1.0.0",
  "description": "Zariya Career Counseling Platform",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.6.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "morgan": "^1.10.0",
    "@google/generative-ai": "^0.1.3",
    "xlsx": "^0.18.5"
  },
  "scripts": {
    "postinstall": "npm --prefix frontend/api install",
    "vercel-build": "npm --prefix frontend/api install && cd frontend && npm run build",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && npm run dev",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install && cd ../frontend/api && npm install",
    "build": "cd frontend && npm run build",
    "vercel-deploy": "vercel --prod",
    "dev": "npm run start",
    "local": "npm run start"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
