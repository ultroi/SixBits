{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "frontend/api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["backend/**", "node_modules/**", "frontend/api/node_modules/**"],
        "nodeVersion": "22.x"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/frontend/api/index.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/index.html"
    }
  ],
  "installCommand": "npm install && npm run install:all",
  "env": {
    "NODE_ENV": "production"
  }
}